<h1>My Cart</h1>
<% @items.each_with_index do |item, i| %>
  <%= item.title %>
  <%= item.price %>
  <%= number_field_tag 'quantity', @quantities[i] %><%= button_to "+", add_item_path(item_id: item.id) %><%= button_to "-", subtract_item_path(item_id: item.id) %><br />
<% end %>
<br />
<%= button_to "Submit Order", order_path(@order), method: "post" %>
<br />

<h3><%= link_to "Back to Menu", root_path %></h3>
